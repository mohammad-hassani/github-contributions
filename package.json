{
  "name": "github-contributions",
  "version": "1.1.1",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build": "electron-builder --x64",
    "build:deb": "electron-builder --linux deb",
    "build:appimage": "electron-builder --linux AppImage",
    "release": "electron-builder --publish always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohammad-hassani/github-contributions.git"
  },
  "keywords": [
    "github",
    "contributions",
    "tracker",
    "desktop",
    "electron",
    "productivity",
    "developer-tools",
    "github-graph",
    "contribution-calendar",
    "github-stats",
    "open-source",
    "development",
    "utility",
    "linux",
    "appimage",
    "deb"
  ],
  "author": {
    "name": "Mohammad Hassani",
    "email": "hasani9821.mh@gmail.com",
    "url": "https://github.com/mohammad-hassani"
  },
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "type": "commonjs",
  "homepage": "https://github.com/mohammad-hassani/github-contributions#readme",
  "bugs": {
    "url": "https://github.com/mohammad-hassani/github-contributions/issues",
    "email": "hasani9821.mh@gmail.com"
  },
  "description": "A beautiful minimal desktop app to track your GitHub contributions in real-time. Displays your GitHub contribution graph on your desktop with dark/light themes, system tray integration, and offline support.",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.0.0"
  },
  "dependencies": {},
  "icon": "icon.png",
  "build": {
    "appId": "com.github-contributions.app",
    "icon": "icon.png",
    "compression": "maximum",
    "extraResources": [],
    "extraFiles": [],
    "asar": true,
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "icon.png",
      "package.json"
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "synopsis": "GitHub Contributions Tracker - Real-time GitHub contribution graph on your desktop"
    },
    "publish": {
      "provider": "github",
      "owner": "mohammad-hassani",
      "repo": "github-contributions",
      "releaseType": "release"
    }
  }
}
